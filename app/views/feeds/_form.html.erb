<%= form_with(model: feed, local: true, url: choose_new_or_edit) do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>
      <ul>
      <% feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
    </div>

    <div class="blog_title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="blog_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>

    <div class="field">
      <%= form.label :image %>
      <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
      <%= form.file_field :image %>
      <=% from.hidden_field :image %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
      <% end %>
