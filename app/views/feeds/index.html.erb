
<header class="header">DogBook</header>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Image</th>
      <th>Content</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <article>
    <div class = "line">
      <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.user.name %></td>
        <td><%= feed.title %></td>
        <td><%= image_tag(feed.image.url) %></td>
        <td><%= feed.content %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </div>
    <% end %>
  </article>
</table>

<%= link_to '!!!!!!!!!New Dog!!!!!!!!!', new_feed_path %>
